.cell-lists {
  width: 100%;
  height: 200rpx;
  background: #f5f5f5;
}

.cell {
  padding: 20rpx 0;
  /* width: 100%; */
  background: #fff;
  /* float: left; */
  height: 80rpx;
  background: #fff;
  margin: 20rpx 0;
}

.cells {
  height: 100%;
  margin: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.payIcon {
  width: 50rpx;
  height: 50rpx;
}

.detail-foot-cover {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #f5f5f5;
  border-top: 1px solid #ccc;
  display: flex;
  flex-direction: row;
}

.foot1 {
  flex: 3;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 0 15rpx;
}

.foot2 {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #bb0007;
  color: #fff;
  font-size: 28rpx;
}
