.cell-lists {
  height: 200rpx;
  background: #f5f5f5;
}

.wrapper {
  background-color: #fff;
  margin-top: 20rpx;
}

.wrapper .item {
  padding: 30rpx;
  font-size: 30rpx;
  color: #282828;
  border-bottom: 1px solid #f0f0f0;
  box-sizing: border-box;
}

.wrapper .item textarea {
  background-color: #f9f9f9;
  width: 690rpx;
  height: 140rpx;
  border-radius: 3rpx;
  margin-top: 30rpx;
  padding: 25rpx 28rpx;
  box-sizing: border-box;
}

.acea-row.row-between-wrapper {
  align-items: center;
  justify-content: space-between;
}

.acea-row {
  display: flex;
  flex-wrap: wrap;
}

.addr_box {
  display: flex;
  align-items: center;
  height: 80rpx;
  padding: 30rpx;
  background: #fff;
}

.line {
  width: 100%;
  height: 3rpx;
}

.line image {
  width: 100%;
  height: 100%;
  display: block;
}

.weui-cell {
  padding: 30rpx;
}

.cell {
  padding: 20rpx 0;
  height: 80rpx;
  background: #fff;
  margin-top: 20rpx;
}

.cells {
  height: 100%;
  margin: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.goods-cells {
  padding: 20rpx 30rpx;
  margin-top: 20rpx;
  background: #fff;
}

.goods-cell {
  height: 180rpx;
  padding: 10rpx 0;
  display: flex;
  display: -webkit-flex;
  align-items: center;
}

.has-border {
  border-bottom: 1px solid #ccc;
}

.goods-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
}

.goods-info {
  width: calc(100% - 180rpx);
  margin-left: 20rpx;
}

.row {
  color: #fff;
  display: flex;
  flex-direction: row;
  /* width: 430rpx; *//* width: 100%; */
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.goods-name {
  color: #000;
  font-size: 32rpx;
  /* width: calc(100% - 100rpx); */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods-price {
  font-size: 32rpx;
  color: #ef0007;
}

.goods-type {
  color: #999;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.num-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.payIcon {
  width: 50rpx;
  height: 50rpx;
}

.detail-foot-cover {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #f5f5f5;
  border-top: 1px solid #ccc;
  display: flex;
  flex-direction: row;
  z-index: 10;
}

.foot1 {
  flex: 3;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 0 15rpx;
}

.foot2 {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ff7701;
  color: #fff;
  font-size: 28rpx;
}
