/* pages/detail.wxss */

.detail-title-cover {
  width: 100%;
  height: 250rpx;
  background: #fff;
  margin-bottom: 15rpx;
  float: left;
  display: flex;
  flex-direction: row;
  padding: 15rpx 0;
}

.detail-title-lt {
  flex: 5;
  /* width: 90%; */
  display: flex;
  flex-direction: column;
  float: left;
}

.detail-title-rt {
  flex: 1;
  /* width: 10%; */
  float: left;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: row;
}

.detail-title-rt image {
  width: 60rpx;
  height: 60rpx;
}

.lt-flex {
  flex: 1;
  margin-left: 30rpx;
}

.lt-flex-end {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: row;
}

.bottom-cover {
  position: fixed;
  top: 0;
  width: 100%;
  height: 300rpx;
  background: #ccc;
}

.title {
  word-break: break-all;
}

.shopPrice {
  color: #ec4444;
  font-size: 36rpx;
}

.markPrice-t {
  /* font-size: 20rpx; */
  padding-left: 20rpx;
  color: #acacac;
}

.markPrice {
  text-decoration-line: line-through;
  color: #acacac;
  /* font-size: 20rpx; */
}

.little-size {
  color: #acacac;
  /* font-size: 20rpx; */
}

.blank {
  float: left;
  width: 100%;
  height: 30rpx;
  background: #fff;
  margin-bottom: 15rpx;
}

.choise-cover {
  float: left;
  width: 100%;
  height: 80rpx;
  background: #fff;
  padding: 10rpx 0;
  margin-bottom: 15rpx;
}

.choise {
  height: 100%;
  margin: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #707070;
}

.arrow {
  width: 25rpx;
  height: 25rpx;
}

.detail-images {
  width: 100%;
  float: left;
}

.detail-images image {
  width: 100%;
}

.detail-foot-cover {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #f5f5f5;
  border-top: 1px solid #ccc;
  display: flex;
  flex-direction: row;
}

.foot-one, .foot-two, .foot-three {
  flex: 1;
}

.foot-one {
  display: flex;
  align-items: center;
}

.foot-one view {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.foot-one text {
  font-size: 20rpx;
  color: #8a8a8a;
}

.foot-one image {
  width: 50rpx;
  height: 50rpx;
}

.foot-two {
  background: #5c5c5c;
}

.foot-three {
  /* background: #d81e06; */
  background: #ff7701;
}

.foot-two, .foot-three {
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

/*mask*/

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.3;
  overflow: hidden;
}

/*content*/

.drawer_attr_box {
  width: 100%;
  /* overflow: hidden; */
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1001;
  background: #fff;
}

.drawer_content {
  /* padding: 20rpx 40rpx; *//* height: 470rpx; *//* overflow-y: scroll; */
  position: relative;
}

.drawer_item {
  padding: 30rpx 20rpx;
  font: 28rpx "microsoft yahei";
  text-align: left;
}

.drawer_btn {
  height: 100rpx;
  background: #FF7701;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 30rpx;
}

.drawer_item_end {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: row;
  margin-bottom: 30rpx;
}

.drawer_item_end_lt {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: row;
}

.badge .weui-badge {
  /* float: left; *//* margin-top: 20rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx; */
  margin: 15rpx;
  /* padding: 0.3em 2em; */
  padding: 0.5em 1em;
