.shopPrice {
  color: #ec4444;
  font-size: 36rpx;
}

.markPrice-t {
  font-size: 20rpx;
  padding-left: 20rpx;
  color: #acacac;
}

.markPrice {
  text-decoration-line: line-through;
  color: #acacac;
  font-size: 20rpx;
}

.little-size {
  color: #acacac;
  font-size: 20rpx;
}

.detail-title-rt {
  flex: 1;
}

.blank {
  float: left;
  width: 100%;
  height: 30rpx;
  background: #fff;
  margin-bottom: 15rpx;
}

.choise-cover {
  float: left;
  width: 100%;
  height: 80rpx;
  background: #fff;
  padding: 10rpx 0;
  margin-bottom: 15rpx;
}

.choise {
  height: 100%;
  margin: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #707070;
}

.arrow {
  width: 25rpx;
  height: 25rpx;
}

.detail-images {
  width: 100%;
  height: 1000px;
  float: left;
}

.detail-images image {
  width: 100%;
  float: left;
}

.detail-foot-cover {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #f5f5f5;
  border-top: 1px solid #ccc;
  display: flex;
  flex-direction: row;
}

.foot-one, .foot-two, .foot-three {
  flex: 1;
}

.foot-one {
  display: flex;
  align-items: center;
}

.foot-one view {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.foot-one text {
  font-size: 20rpx;
  color: #8a8a8a;
}

.foot-one image {
  width: 50rpx;
  height: 50rpx;
}

.foot-two {
  background: #5c5c5c;
}

.foot-three {
  background: #d81e06;
}

.foot-two, .foot-three {
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

/*mask*/

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
}

/*content*/

.drawer_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1001;
  background: #fff;
}

.drawer_content {
  /* padding: 20rpx 40rpx; *//* height: 470rpx; */
  overflow-y: scroll;
}

.drawer_item {
  padding: 30rpx 20rpx;
  font: 28rpx "microsoft yahei";
  text-align: left;
}

.drawer_btn {
  height: 100rpx;
  background: #d81e06;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 30rpx;
}

.drawer_item_end {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: row;
}
.drawer_item_end_lt{
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: row;
}
.badge-text {
  background: #d81e06;
  color: #fff;
  padding: 10rpx;
  font-size: 24rpx;
  border-radius: 10rpx;
  border: 2rpx solid #ccc;
}

.line {
  border-bottom: 1px solid #ccc;
}

/*主容器*/

.stepper {
  width: 180rpx;
  height: 60rpx;
  /*给主容器设一个边框*/
  border: 2rpx solid #ccc;
  border-radius: 8rpx;
  margin: 0 auto;
}

/*加号和减号*/

.stepper text {
  width: 58rpx;
  line-height: 60rpx;
  text-align: center;
  float: left;
}

/*数值*/

.stepper input {
  width: 60rpx;
  height: 60rpx;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 28rpx;
  /*给中间的input设置左右边框即可*/
  border-left: 2rpx solid #ccc;
  border-right: 2rpx solid #ccc;
}

/*普通样式*/

.stepper .normal {
  color: #000;
}

/*禁用样式*/

.stepper .disabled {
  color: #ccc;
}
