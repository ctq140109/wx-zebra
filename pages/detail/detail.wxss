/* pages/detail.wxss */

.detail-title-cover {
  width: 100%;
  height: 250rpx;
  background: #fff;
  margin-bottom: 15rpx;
  float: left;
  display: flex;
  flex-direction: row;
  padding: 15rpx 0;
}

.detail-title-lt {
  flex: 5;
  display: flex;
  flex-direction: column;
}

.lt-flex {
  flex: 1;
  margin-left: 30rpx;
}

.lt-flex-end {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: row;
}

.bottom-cover {
  position: fixed;
  top: 0;
  width: 100%;
  height: 300rpx;
  background: #ccc;
}

/* .lt-flex-end view{
