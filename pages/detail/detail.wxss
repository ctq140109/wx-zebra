.drawer_close {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.view_cargo {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  border: 3rpx solid #fff;
  border-radius: 10rpx;
  top: -30rpx;
  left: 30rpx;
  z-index: 1002;
}

.drawer_title {
  font-size: 28rpx;
  word-break: break-all;
}

/*主容器*/

.stepper {
  width: 180rpx;
  height: 60rpx;
  /*给主容器设一个边框*/
  border: 2rpx solid #ccc;
  border-radius: 8rpx;
}

/*加号和减号*/

.stepper text {
  width: 58rpx;
  line-height: 60rpx;
  text-align: center;
  float: left;
}

/*数值*/

.stepper input {
  width: 60rpx;
  height: 60rpx;
  float: left;
  text-align: center;
  font-size: 28rpx;
  /*给中间的input设置左右边框即可*/
  border-left: 2rpx solid #ccc;
  border-right: 2rpx solid #ccc;
}

/*普通样式*/

.stepper .normal {
  color: #000;
}

/*禁用样式*/

.stepper .disabled {
  color: #ccc;
}

