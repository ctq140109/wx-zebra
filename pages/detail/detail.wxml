<view class='container bg' style='margin-bottom:100rpx;'>
  <swiper indicator-dots="true" interval="3000" duration="1000" autoplay='true' style='height:750rpx'>
    <block wx:for="{{imgUrls}}" wx:key='{{i}}'>
      <swiper-item>
        <image src="{{item}}" style="width:100%;height:750rpx;" />
      </swiper-item>
    </block>
  </swiper>
  <view class='detail-title-cover'>
    <view class='detail-title-lt'>
      <view class='lt-flex'>
        <text class='title'>{{name}}</text>
      </view>
      <view class='lt-flex'>
        <text class='shopPrice'>￥299.00</text>
        <text class='markPrice-t'>原价:</text>
        <text class='markPrice'>￥399.00</text>
      </view>
      <view class='lt-flex lt-flex-end'>
        <view>
          <text class='little-size'>剩余:</text>
          <text class='little-size'>199</text>
        </view>
        <view>
          <text class='little-size'>销量:</text>
          <text class='little-size'>1289笔</text>
        </view>
        <view>
          <text class='little-size'>快递包邮</text>
        </view>
      </view>
    </view>
    <view class='detail-title-rt'></view>
  </view>
  <view class='blank'></view>
  <view class='choise-cover'>
    <view class='choise'>
      <text>选择:</text>
      <image src='../image/arrow-rt.png' class='arrow'></image>
    </view>
  </view>
  <view class='choise-cover'>
    <view class='choise'>
      <text>商品评价</text>
      <image src='../image/arrow-rt.png' class='arrow'></image>
    </view>
  </view>
  <view class='choise-cover'>
    <view class='choise'>
      <text>商品详情</text>
      <!-- <image src='../image/arrow-rt.png' class='arrow'></image> -->
    </view>
  </view>
  <view class='detail-images'>
    <image src='../image/detail/introduce1.jpg'></image>
    <image src='../image/detail/introduce2.jpg'></image>
    <image src='../image/detail/introduce3.jpg'></image>
    <image src='../image/detail/introduce4.jpg'></image>
    <image src='../image/detail/introduce5.jpg'></image>
  </view>
</view>
<view class='detail-foot-cover'>
  <view class='foot-one'>
    <view bindtap='toCart'>
      <image src='../image/tabBar/cart-1.png'></image>
      <text>购物车</text>
    </view>
    <view bindtap='toIndex'>
      <image src='../image/tabBar/home-1.png'></image>
      <text>首页</text>
    </view>
  </view>
  <view class='foot-two' bindtap="powerDrawer" data-statu="open">
    <text>加入购物车</text>
  </view>
  <view class='foot-three' bindtap="powerDrawer" data-statu="open">
    <text>立即购买</text>
  </view>
</view>
<!--mask-->
<view class="drawer_screen" bindtap="powerDrawer" data-statu="close" wx:if="{{showModalStatus}}"></view>
<!--content-->
<!--使用animation属性指定需要执行的动画-->
<view animation="{{animationData}}" class="drawer_attr_box" wx:if="{{showModalStatus}}">
  <!--drawer content-->
  <view class="drawer_content">
    <view class="drawer_item line">菜单1</view>
    <view class="drawer_item line">
      <view style='margin:10rpx 0;'>
        <text>包装</text>
      </view>
      <text class='badge-text'>700ml*6瓶</text>
    </view>
    <view class="drawer_item drawer_item_end">
      <view class='drawer_item_end_lt'>
        <text>购买数量：</text>
        <view class="stepper">
          <!-- 减号 -->
          <text class="{{minusStatus}}" bindtap="bindMinus">-</text>
          <!-- 数值 -->
          <input type="number" bindchange="bindManual" value="{{num}}" />
          <!-- 加号 -->
          <text class="normal" bindtap="bindPlus">+</text>
        </view>
      </view>
      <text style='float:right;'>剩余:128件</text>
    </view>
    <view class='drawer_btn'>
      <text>立即购买</text>
    </view>
  </view>
</view>