.cover {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
}

.inner-cover {
  width: 100%;
  height: 70%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: column;
}

.title {
  display: flex;
  align-items: center;
  width: 80%;
  justify-content: center;
}

.title text {
  font-size: 56rpx;
}

.title .img-t {
  width: 300rpx;
  height: auto;
}

.title .logo {
  width: 100rpx;
  height: auto;
  margin-right: 10px;
  border: 1px solid #fff;
  border-radius: 50rpx;
}

.cover-image {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
}

.btm-cover {
  display: flex;
  align-items: center;
  flex-direction: column;
}

.btm-cover .tips {
  margin-top: 10px;
}

.dash-btn {
  width: 50%;
  padding: 10rpx 30rpx;
  margin: 20rpx;
  border: 1px dashed #fff;
  border-radius: 20rpx;
  color: #f09819;
  text-align: center;
}

.normal-btn {
  width: 50%;
  padding: 20rpx 30rpx;
  margin-top: 10px;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.bg1{
  background-image: linear-gradient(45deg, #ec008c, #6739b6);
}
.bg2{
  background-image: linear-gradient(45deg, #9000ff, #5e00ff);
}
.normal-btn image {
  width: 40rpx;
  height: auto;
  margin-right: 20rpx;
}

.round-btn {
  width: 200rpx;
  height: 200rpx;
  background-image: linear-gradient(90deg, #ec008c, #6739b6);
  border-radius: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.round-btn .scan-img {
  width: 50%;
  height: auto;
}

.shadow-blur {
  position: relative;
}

.shadow-blur::before {
  content: "";
  display: block;
  background: inherit;
  filter: blur(10rpx);
  position: absolute;
  width: 100%;
  height: 100%;
  top: 10rpx;
  left: 10rpx;
  z-index: -1;
  opacity: 0.4;
  transform-origin: 0 0;
  border-radius: inherit;
  transform: scale(1, 1);
}
