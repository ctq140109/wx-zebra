/* pages/list/list.wxss */
@import '/font/icon.wxss';

.page {
  overflow-y: hidden;
}

.bgwhite {
  background: white;
}

.list-left-menu {
  width: 160rpx;
  font-size: 28rpx;
  position: fixed;
  left: 0;
  z-index: 10;
}

.list-left-menu-box-unselects {
  padding: 20rpx 10rpx;
  border-bottom: 1px solid #e3e3e3;
  color: #6c6c6c;
  background: #f9f9f9;
}

.list-left-menu-box-selecteds {
  padding: 20rpx 10rpx;
  color: #ff9c35;
  border-left: 3px solid #ff9c35;
  background: white;
}

.list-left-menu-box-unselect {
  padding: 20rpx 10rpx;
  border-bottom: 1px solid #e3e3e3;
  color: #6c6c6c;
  /* background: #f9f9f9; */
}

.list-left-menu-box-selected {
  padding: 20rpx 10rpx;
  color: #ff9c35;
  border-bottom: 1px solid #e3e3e3;
  /* background: white; */
}

.list-tab {
  margin-left: 170rpx;
  font-size: 25rpx;
  background: #f3f4f6;
  color: #cbcccf;
  padding: 2px;
}

.list-menu-name {
  text-align: center;
  /* margin-top: 14rpx; */
  border-top: 2px solid #ccc;
}
.list-menu-name-top-none{
  border-top: none;
}
.list-image-box {
  width: 160rpx;
  height: 72px;
  text-align: center;
}

.emptyList {
  margin-left: 160rpx;
  text-align: center;
}

.content-list {
  margin-left: 160rpx;
  display: flex;
  border-bottom: 1px solid #e3e3e3;
  background: #fff;
  padding: 20rpx;
  height: 224rpx;
  overflow: hidden;
}

.list-image {
  width: 108rpx;
  /* margin-top:16rpx; */
}

.issue-name {
  width: 200px;
  font-size: 30rpx;
  /* margin-top:20rpx; */
}

.listItem {
  display: flex;
  align-items: center;
}

.plus-icon {
  float: right;
  color: #ff9c35;
  font-size: 46rpx;
}

.operate-bar {
  z-index: 1001;
  position: fixed;
  bottom: 0px;
  height: 100rpx;
  width: 100%;
  display: flex;
}

.gouwuche {
  width: 75%;
  background: #353535;
  height: 100%;
}

.gouwuche-icon {
  font-size: 40px;
  color: #87888e;
  margin-left: 10px;
  position: relative;
}

.number-msg {
  padding: 1px 7px;
  border-radius: 50%;
  background: red;
  color: white;
  font-size: 14px;
  position: absolute;
  text-align: center;
  top: 0px;
  right: -5px;
}

.black-cover {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  height: 100%;
}

.gouwuche-price {
  color: #a9a9a9;
  display: flex;
  align-items: center;
  margin-left: 10px;
  font-size: 15px;
}

.submit-btn {
  height: 100%;
  background: #f7f7f7;
  width: 25%;
  display: flex;
}

.submit-btn-label {
  color: #a9a9a9;
  font-size: 15px;
  margin: auto;
}

.drawer_screen {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease-in-out 0s;
  opacity: 1;
  transform: scale(1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.drawer_box_ad {
  width: 86%;
  z-index: 1001;
  transition:all 0.3s ease-in-out 0s;
}
.closed{width: 12%;margin: 0 auto;display: block;z-index: 1002}
/* .closed{z-index: 1002} */
/* .line{width:6rpx;height:60rpx;background-color:#fff;margin:0 auto;} */
.on {
  transform: scale(0);
  opacity: 0;
}

.disnone {
  display: none;
}

.drawer_content_ad {
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;

  width: 100%;
}

.select-line-nav {
  font-size: 12px;
  margin-left: 5px;
  margin-top: 10px;
  color: #ababab;
}

.select-tab {
  padding: 5px 7px;
  border: 1px solid #ababab;
  font-size: 12px;
  border-radius: 5px;
  margin: 5px;
  color: #ababab;
  z-index: 1002;
}

.select-active {
  color: #ff9c35;
  border: 1px solid #ff9c35;
}

.select-price {
  font-size: 14px;
  /* color:#FF9C35; */
  color: #f05a86;
  margin-top: 20px;
  display: flex;
  align-items: center;
  margin-left: 10px;
}

.btn-putIn {
  height: 40px;
  width: 100px;
  font-size: 14px;
  background: #ff9c35;
  color: white;
  margin-right: 0;
}

.activity-color {
  color: #ff9c35;
}

.color-white {
  color: white;
}

.activity-color-bg {
  background: #ff9c35;
}

.label-cart-bar {
  color: #878787;
  font-size: 12px;
  border-left: 4px solid #ff9c35;
  margin-left: 20px;
}

.icon-clear {
  color: #878787;
  float: right;
  margin-right: 10px;
}

.label-clear {
  color: #878787;
  font-size: 12px;
}

.cart-list-box {
  background: #fff;
  display: flex;
  font-size: 32rpx;
  height: 128rpx;
  overflow: hidden;
}

.list-info {
  width: 50%;
  padding: 10rpx 30rpx;
}

.list-info-size {
  font-size: 24rpx;
  color: #b1b1b1;
}

.icon-li-circle {
  margin-left: 15px;
  font-size: 20px;
}

.font20 {
  font-size: 20px;
}

.cart-scroll-list {
  /* height:450rpx; */
  /* max-height: 550rpx; */
  max-height: 640rpx;
}

.cut-bar {
  height: 40rpx;
  position: fixed;
  background: #ffcd9b;
  width: 100%;
  color: #fff7ec;
  font-size: 24rpx;
  text-align: center;
  z-index: 100;
}

.cut-bar-bottom {
  bottom: 100rpx;
}

.scroll-h {
  /* height: calc(100vh - 100rpx); */
  margin-bottom: 100rpx;
  /* height: 1500px; */
}

.bt-cover {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
/*遮罩层*/
.modal-mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #000;
    opacity: 0;
}
.modal-content {
  width: 100%;
  overflow: hidden;
  position: fixed;
  z-index: 1000;
  bottom: 100rpx;
}
