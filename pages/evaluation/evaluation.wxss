.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #ff7701;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border-top: 2rpx solid #ccc;
  z-index: 10;
}

.stars {
  padding: 30rpx;
  box-sizing: border-box;
  position: relative;
  border-bottom: 1rpx solid #ececec;
  background-color: #fff;
}

.content {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  flex-direction: row;
  justify-content: flex-start;
}

.content-text {
  font-size: 32rpx;
  color: #4a4a4a;
  margin-right: 25rpx;
}

.reviews {
  padding: 30rpx;
  background: #fff;
}

.content-stars {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
}

.content-stars image {
  width: 50rpx;
  height: auto;
  margin-right: 25rpx;
}
