/* pages/center/center.wxss */

.container {
  width: 100%;
  height: 100%;
}

.sale-wraper {
  width: 100%;
  /* height: 120rpx; *//* background: #ccc; */
  display: flex;
  align-items: center;
  /* justify-content: space-around; */
  /* padding: 10px 0; */
}

.sale-wraper image {
  width: 60rpx;
  height: 60rpx;
}

.weui-cell__bd text {
  font-size: 28rpx;
}

.sale-wraper-title {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  position: relative;
}
.sale-wraper-title text {
  font-size: 24rpx;
}

.userinfo {
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  background: rgb(150, 0, 0);
  /* background-repeat: no-repeat;
  background-size: 100%; */
}

.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  background: #ccc;
}

.userinfo-msg {
  width: 200rpx;
  height: 120rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
}

.msgbox {
  flex: 1;
  color: #fff;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.userinfo-btn {
  color: #fff;
  border: 2rpx solid #fff;
  font-size: 20rpx;
  background: transparent;
  padding: 0 10rpx;
  /* margin-top: 10rpx; */
}

.fot-normal {
  font-size: 28rpx;
}

.userinfo-cover {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: row;
  margin-left: 30rpx;
}

.userinfo-cover text {
  font-size: 24rpx;
}
