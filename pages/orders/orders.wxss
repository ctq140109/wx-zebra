.weui-bar__item_on {
  color: #bb0007 !important;
}

.weui-navbar__title {
  font-size: 28rpx;
}

.weui-navbar__slider {
  background-color: #bb0007 !important;
}

.goods-wraper {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx 30rpx;
}

.goods-item {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  padding: 10rpx 0;
}

.has-border {
  border-bottom: 1px solid #f5f5f5;
}

.goods-img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 20rpx;
}

.goods-msgbox {
  width: calc(100% - 180rpx);
  height: 180rpx;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.goods-name-cover {
  flex: 1;
  display: flex;
  align-items: center;
}

.goods-name {
  color: #707070;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods-info {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.goods-price {
  font-size: 32rpx;
  color: #ef0007;
}

.goods-type {
  font-size: 28rpx;
  color: #ccc;
}

.goods-num {
  color: #ccc;
}

.btm-box {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 20rpx;
}

.top-box {
  width: 100%;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* margin-top: 20rpx; */
  margin-bottom: 20rpx;
}

.btm-btn {
  width: 150rpx;
  height: 50rpx;
  border: 1px solid #acacac;
  margin-left: 20rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 10rpx;
  border-radius: 100rpx;
}

.default {
  color: #707070;
  /* background: #f5f5f5; */
}

.primary {
  color: #ef0007;
  /* background: #ef0007; */
  border: 1px solid #ef0007;
}

.loading-cover {
  /* height: 50px; */
  padding: 0 30rpx;
  margin-bottom: 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #acacac;
}

