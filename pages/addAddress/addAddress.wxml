<view class="cover-page">
  <view class='weui-cells weui-cells_after-title font-normal'>
    <view class='weui-cell'>
      <view class="weui-cell__hd">
        <view class="weui-label">收件人</view>
      </view>
      <view class="weui-cell__bd">
        <input type='text' value="{{name}}" bindinput="bindKeyName" class="weui-input" placeholder="请输入收件人姓名" />
      </view>
    </view>
    <view class='weui-cell'>
      <view class="weui-cell__hd">
        <view class="weui-label">联系电话</view>
      </view>
      <view class="weui-cell__bd">
        <input type='number' value="{{mobile}}" bindinput="bindKeyMobile" class="weui-input" placeholder="请输入联系电话" />
      </view>
    </view>
    <view class='weui-cell'>
      <view class="weui-cell__hd">
        <view class="weui-label">所在区域</view>
      </view>
      <view class="weui-cell__bd">
        <input type='text' value="{{keyword}}" bindinput="bindRegionChange" class="weui-input" placeholder="请输入地址" />
      </view>
    </view>
    <view class='weui-cell' wx:for="{{searchList}}" wx:key="{{index}}" bindtap="selectReg" data-index="{{index}}">
      <view class="weui-cell__bd">
      {{item.address}}
      </view>
    </view>
    <view class='weui-cell weui-cell-fix'>
      <view class="weui-cell__hd">
        <view class="weui-label">详细地址</view>
      </view>
      <view class="weui-cell__bd">
        <textarea type='text' bindinput="bindKeyDetailed" value="{{detailed}}" class='weui-textarea' placeholder="请输入详细地址" style='height:100rpx;'></textarea>
      </view>
    </view>
  </view>

</view>
<view class='footer' bindtap='save'>
  <text>保存</text>
</view>