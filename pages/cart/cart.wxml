<view class="bg main">
  <view class='full' wx:if="{{cartList.length == 0}}">
    <image src='../image/cart/empty_cart.png'></image>
    <text class='empty'>您的购物车空空如也</text>
    <view class='go' bindtap='toIndex'>去逛一逛!</view>
  </view>
  <scroll-view scroll-y="true" class='cartList' wx:else>
    <view class='items' wx:for="{{cartList}}">
      <checkbox style='margin-left:15rpx;'></checkbox>
      <image src='{{item.image}}' class='list-img'></image>
      <view class='list-cover'>
        <text style='flex:2' class='cargoName'>{{item.cargoName}}</text>
        <view style='flex:1' class='cargoBottom'>
          <text class='shopPrice'>￥{{item.nowPrice}}</text>
          <view class="stepper">
            <!-- 减号 -->
            <text class="{{minusStatus}}" bindtap="bindMinus">-</text>
            <!-- 数值 -->
            <input type="number" bindchange="bindManual" value="{{num}}" />
            <!-- 加号 -->
            <text class="normal" bindtap="bindPlus">+</text>
          </view>
        </view>
      </view>
    </view>
  </scroll-view>
  <view class='main-bottom'>
    <view class='bottom-left'>
      <view class='bottom-left1'>
        <checkbox bindchange="selectAll"></checkbox>
        <image src='../image/cart/delete.png' style='width:50rpx;margin-left:20rpx;' mode='widthFix'></image>
      </view>
      <view class='bottom-left2'>
        <text>合计:</text>
        <text style='color:#ec4444;'>￥0.00</text>
      </view>
    </view>
    <view class='bottom-right'>
      <text>结算</text>
    </view>
  </view>
</view>