/**index.wxss**/
.style-swiper{
  border-radius: 20rpx;
  border-bottom-right-radius:100rpx; 
  overflow: hidden;
}
.blank_box {
  display: flex;
  align-items: center;
  justify-content: center;
}

.body-wraper {
  width: 100%;
}

.shop_Box {
  min-height: 200rpx;
  background: #f5f5f5;
  overflow: auto;
}

.shopBox {
  width: 46%;
  overflow: auto;
  float: left;
  background-color: #fff;
  margin: 0rpx 10rpx 20rpx 20rpx;
  border: 1rpx solid #e5e5e5;
}

.shopBox:nth-child(even) {
  width: 46%;
  margin: 0rpx 10rpx 20rpx 10rpx;
}

.shopBox:nth-child(1) {
  margin-top: 20rpx;
}

.shopBox:nth-child(2) {
  margin-top: 20rpx;
}

.shopImg {
  width: 100%;
  height: 300rpx;
  margin: 0 auto;
}

.shopName {
  height: 40rpx;
  padding: 30rpx 40rpx 40rpx 24rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  text-align: left;
}

.shopMessage {
  height: 54rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.shopCart {
  float: right;
}

.shopCart image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 24rpx;
}

.shops {
  float: left;
}

.shopPrice {
  color: #fc4141;
  padding-left: 24rpx;
  font-size: 32rpx;
}

.markPrice {
  text-decoration-line: line-through;
  color: #acacac;
  font-size: 28rpx;
  padding-left: 20rpx;
}

.td {
  width: 0.4rem;
  height: auto;
  margin-left: 0.3rem;
  vertical-align: middle;
}

.list-pic {
  height: 250rpx !important;
}

.sort-item:nth-child(even) {
  margin-right: 0;
}

.sort-item:nth-child(odd) {
  margin-right: 20rpx;
}

.sort-item {
  width: calc(50% - 10rpx);
  height: 440rpx;
  margin-bottom: 20rpx;
  /* background: #fff; */
  background: #f1f1f1;
  border: 1px solid #f1f1f1;
  border-radius: 20rpx;
  overflow: hidden;
  float: left;
}

.original_price {
  text-decoration: line-through;
  color: gray;
  font-size: 28rpx;
}

.content {
  width: 100%;
  height: 964rpx;
  /* height: 100vh; */
  overflow: hidden;
}

.aside-tabs {
  width: 180rpx;
  height: 100%;
  float: left;
}

.main_tab {
    width: calc(100% - 180rpx);
    float: left;
}

.conter {
  width: calc(100% - 180rpx);
  /* height: 100%; */
  height: calc(100% - 94rpx);
  float: right;
  padding: 20rpx;
}