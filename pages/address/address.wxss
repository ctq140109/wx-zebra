.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #bb0007;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border-top: 2rpx solid #ccc;
  z-index: 10;
}
.address {
  font-size: 28rpx;
  color: #999;
}

.cell-ft {
  padding: 20rpx 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.cell-ft1{
  flex: 1;
  display:flex;
  align-items: center;
  justify-content: flex-start; 
}

.cell-ft2 {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.icon {
  width: 40rpx;
  height: 40rpx;
  margin: 0 10rpx;
}
.ft2 {
  display: flex;
  align-items: center;
  justify-content: center;
}
.icon-margin{
  margin: 10rpx;
}