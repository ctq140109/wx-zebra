.aside {
  width: 100%;
  height: 100%;
}

.aside .item {
  padding: 30rpx 0;
  width: 100%;
  position: relative;
}

.aside .item view {
  font-size: 26rpx;
  text-align: left;
  padding: 0 30rpx;
}
.aside .cur::after {
  content: "";
  width: 8rpx;
  height: 30rpx;
  border-radius: 10rpx 0 0 10rpx;
  position: absolute;
  background-color: orange;
  top: 0;
  right: 0rpx;
  bottom: 0;
  margin: auto;
}
