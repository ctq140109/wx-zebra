.mask{position: fixed;top: 0;right: 0;left: 0;bottom: 0;background: rgba(0, 0, 0, 0.3);z-index: 1000;transition:all 0.3s ease-in-out 0s;opacity:1;transform: scale(1);display: flex;align-items: center;justify-content: center;flex-direction: column;width: 100%;height: 100%;}
.sharing-packets{width: 60%;transition:all 0.3s ease-in-out 0s;}
.on{transform: scale(0);opacity:0;}
.disnone{display: none}
.sharing-packets .iconfont{width:80rpx;height:80rpx;border-radius:50%;text-align:center;line-height:80rpx;background-color:rgba(100, 100, 100, 0.8);font-size:32rpx;color:#fff;margin:0 auto;box-sizing:border-box;}
.sharing-packets .line{width:6rpx;height:60rpx;background-color:#fff;margin:0 auto;}
.con-image{width:100%;}
.closed{width: 20%;margin: 0 auto;display: block;}
.sharing-packets .img-cover{height: auto;border-radius: 20rpx;overflow: hidden;margin-bottom: 20rpx;}